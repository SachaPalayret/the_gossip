<html>
  <body>
    <section class="container">
        <div class="column mt-5 mb-3">
            <h1>Titre :  <%= @gossip.title %></h1>
            <p>Potin :  <%= @gossip.content %></p>
            <p>Auteur :  <%= @gossip.user.first_name %></p>
            <p>Ville :  <%= @gossip.user.city.name %></p>
        </div>
        <div class="container">
        <form action="/users/<%=@gossip.id+1%>" method="patch">
          <button type="submit" class="btn btn-primary">En savoir plus sur l'auteur</button>
        </form>
        </div>

        <div class="container">
        <form action="/cities/<%=@gossip.id+1%>" method="patch">
          <button type="submit" class="btn btn-primary">Ville de l'auteur</button>
        </form>

        <p><a href="<%= gossip_path(@gossip.id) %>" class="btn btn-danger" data-confirm="êtes-vous sûr?" data-method="DELETE">Supprimer</a></p>
        </div>
    </section>
  </body>
</html>